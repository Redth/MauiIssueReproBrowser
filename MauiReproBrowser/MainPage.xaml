<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiReproBrowser.MainPage">

    <CollectionView ItemsSource="{Binding Issues}" SelectionChanged="CollectionView_SelectionChanged" SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="4" Padding="10">
                    <Label 
                        Text="{Binding Issue.Number}"
                        Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" 
                        VerticalOptions="Center"
                        FontAttributes="Bold" />

                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Issue.Title}" />

                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Issue.Url}" TextColor="Blue" TextDecorations="Underline" HorizontalOptions="Start">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </Label.GestureRecognizers>
                    </Label>

                </Grid>
                
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
